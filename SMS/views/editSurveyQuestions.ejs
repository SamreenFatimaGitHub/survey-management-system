<html>
	<style>
		body{
				text-align:center;
			}
		.btn{
				width:200px;
  				padding:5px;
			}
		.bg-custom{
					background-color:#F2D7D5
		}
	</style>
	<head>
  		<meta charset="utf-8">
  		<meta name="viewport" content="width=device-width, initial-scale=1">
  		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	</head>
	<head>
		<script>
			function validateForm() {
  				let survey_name = document.forms["updateQuestions"]["survey_name"].value;
				if (survey_name.trim() == "") {
    				alert("Enter Survey Name!");
    				return false;
  				}
				let question1 = document.forms["updateQuestions"]["question1"].value;
				let question2 = document.forms["updateQuestions"]["question2"].value;
				let question3 = document.forms["updateQuestions"]["question3"].value;
				let question4 = document.forms["updateQuestions"]["question4"].value;
				let question5 = document.forms["updateQuestions"]["question5"].value;
  				if (question1.trim() == "" || question2.trim() == "" || question3.trim() == "" || question4.trim() == "" || question5.trim() == "")
				{
    				alert("Enter data in all fields");
    				return false;
  				}
			}
		</script>
	</head>
	<body class="bg-custom">
	<h1>
		Edit Survey
	</h1>
	<br>
	<form method="post" name="updateQuestions" onsubmit="return validateForm()" action="/updateQuestions">
		<h4><input type="hidden" name="sid" value="<%= data[0].SID %>">
			Survey Name: <input type="text" size="50" name="survey_name" autocomplete="off" 
								 value="<%= data[0].SURVEY_NAME %>" placeholder="<%= data[0].SURVEY_NAME %>" required>
		</h4>
		<br>
		<% data.forEach(function(question){ %>
		<input type="hidden" name="<%= question.ID %>" value="<%= question.QID %>">
		Edit <%= question.QNO %> : <input type="text" size="100" name="<%= question.Q_NO %>" autocomplete="off" 
								 value="<%= question.QUESTION %>" placeholder="Question 1" required>
		<br><br>
		<% }) %>
		<button type="submit" name="submitQuestions" class="btn btn-danger">
			Update Survey
		</button>
	</form>
	<br>
	<form method="post" name="home" action="home">
		<button name="home" type="submit" class="btn btn-success">
			HOME
		</button>
	</form>
	</body>
</html>