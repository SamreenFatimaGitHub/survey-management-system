<html>
	<style>
		body{
				text-align:center;
			}
		.btn{
				width:200px;
  				padding:5px;
			}
		.bg-custom{
					background-color:#F2D7D5
		}
	</style>
	<head>
  		<meta charset="utf-8">
  		<meta name="viewport" content="width=device-width, initial-scale=1">
  		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	</head>
	<body class="bg-custom">
	<h1>
		Select Survey to Update
	</h1>
	<br>
	<form method="post" action="/editSurveyQuestions">
		<b>Select Survey Name : </b>
		<select name="surveyName" class="btn btn-default" style="width:25%">
			<% data.forEach(function(surveyNames){ %>
			<option value="<%= surveyNames.SURVEY_NAME %>"><%= surveyNames.SURVEY_NAME %></option>
			<% }) %>
		</select>
		<br><br>
		<button type="submit" class="btn btn-danger">
			UPDATE
		</button>
	</form>
	<br>
	<form method="post" name="home" action="home">
		<button name="home" type="submit" class="btn btn-success">
			HOME
		</button>
	</form>
	</body>
</html>