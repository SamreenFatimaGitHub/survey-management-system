<html>
	<style>
		body{
				text-align:center;
			}
		.btn{
				width:200px;
  				padding:5px;
			}
		.bg-custom{
					background-color:#F2D7D5
		}
	</style>
	<head>
  		<meta charset="utf-8">
  		<meta name="viewport" content="width=device-width, initial-scale=1">
  		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	</head>
	<head>
		<script>
			function validateForm() {
  				let name = document.forms["deleteResponseName"]["name"].value;
				if (name.trim() == "") {
    				alert("Please Enter Name!");
    				return false;
  				}
			}
		</script>
	</head>
	<body class="bg-custom">
	<h1>
		Delete User Response
	</h1>
	<form method="post" name="deleteResponseName" onsubmit="return validateForm()" action="/selectUserSurvey">
		Enter Name: <input type="text" size="30" name="name" autocomplete="off" placeholder="Name" required>
		<br><br>
		<button type="submit" class="btn btn-danger">
			Submit Name
		</button>
	</form>
	<br>
	<form method="post" name="home" action="home">
		<button name="home" type="submit" class="btn btn-success">
			HOME
		</button>
	</form>
	</body>
</html>