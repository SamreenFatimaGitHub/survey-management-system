<html>
	<style>
		body{
				text-align:center;
			}
		.btn{
				width:200px;
  				padding:5px;
			}
		.bg-custom{
					background-color:#F2D7D5
		}
	</style>
	<head>
  		<meta charset="utf-8">
  		<meta name="viewport" content="width=device-width, initial-scale=1">
  		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	</head>
	<body class="bg-custom">
	<h1>
		Select Survey
	</h1>
	<div class="container" style="text-align:left">
	<form method="post" action="/deleteSurveyRespose">
		<b>Select Survey Name to Delete User Reponse: </b>
		<br><br>
		<% data.forEach(function(surveyNames){ %>
		<input type="checkbox" name="surveyName"
			   value="<%= surveyNames.SURVEY_NAME %>"><%= surveyNames.SURVEY_NAME %>
		<br><br>
		<% }) %>
		<p style="color:red;">
			**Redirect to previous page if no response is selected.
		</p>
		<button type="submit" class="btn btn-danger">
			Delete User Response
		</button>
	</form>
	<form method="post" name="home" action="home">
		<button name="home" type="submit" class="btn btn-success">
			HOME
		</button>
	</form>
	</div>
	</body>
</html>